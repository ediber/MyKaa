<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nuvo.mykaa.MainActivity">

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="49dp"
        android:layout_marginLeft="52dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/getTopics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getTopics"
        app:layout_constraintTop_toTopOf="@+id/start"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/start"
        android:layout_marginLeft="73dp" />

    <Button
        android:id="@+id/subscribeTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="subscribeTopic"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@+id/start" />

    <Button
        android:id="@+id/unsubscribeTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unsubscribeTopic"
        app:layout_constraintLeft_toRightOf="@+id/subscribeTopic"
        android:layout_marginLeft="21dp"
        app:layout_constraintTop_toTopOf="@+id/subscribeTopic"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/terminate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="terminate"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/subscribeTopic"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/subscribeTopic" />

</android.support.constraint.ConstraintLayout>
